---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<!-- Minimal arrow with a small accent dot; theme-aware via currentColor + --color-primary. -->
<svg
  class={className}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
  focusable="false"
>
  <path
    d="M5 12h11"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
  />
  <path
    d="M13 7l5 5-5 5"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  />
  <circle cx="19" cy="12" r="1.2" fill="var(--color-primary, #eb5600)" />
</svg>

